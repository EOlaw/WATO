<!-- views/cart.ejs -->
<% layout('layouts/boilerplate')%>

<h1>Your Cart</h1>

<ul>
  <% cart.products.forEach(product => { %>
    <li>
      <strong><%= product.product.title %></strong>
      <p>Quantity: <%= product.count %></p>
      <p>Price: <%= product.price * product.count %></p>
    </li>
  <% }); %>
</ul>

